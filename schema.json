{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "/",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "live": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "level": {
          "type": "number",
          "maximum": 1,
          "minimum": 0
        },
        "systems": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "type": {
                "id": "type",
                "type": "string",
                "enum": [
                  "dimmer"
                ]
              },
              "level": {
                "type": "number",
                "maximum": 1,
                "minimum": 0
              },
              "address": {
                "id": "address",
                "type": "integer",
                "maximum": 255,
                "minimum": 1
              }
            },
            "required": [
              "type",
              "level",
              "address"
            ]
          }
        }
      },
      "required": [
        "level",
        "systems"
      ]
    }
  },
  "required": [
    "live"
  ]
}
